<!DOCTYPE html>
<html>
<head>
  <title>Stack</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
	<header>
		<nav>
			<%= link_to "Top", root_path %>
			<%= link_to "Recent", root_path %>
			<%= link_to "Featured", root_path %>
			<%= link_to "Add a Story", new_story_path %> <!-- link_to helper to anchor tag, new_story_path, evaluates to /story/new -->
		</nav>
		<% flash.each do |key, value| %>
		<span class="<%= key%>">
			<p><%=value %></p>
		</span>
		
		<%end %>
	</header>

<article>
<%= yield %>
</article>

</body>
</html>
